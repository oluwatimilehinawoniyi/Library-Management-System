<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lms.controller.MainController"
            prefHeight="800.0" prefWidth="1200.0">

    <!-- TOP: Toolbar -->
    <top>
        <VBox style="-fx-background-color: #2c3e50;">
            <!-- Title Bar -->
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #34495e;" spacing="15.0">
                <padding>
                    <Insets top="15.0" right="20.0" bottom="15.0" left="20.0"/>
                </padding>
                <Label text="Library Management System" textFill="WHITE" style="-fx-text-fill: #fff">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
            </HBox>

            <!-- Toolbar -->
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #2c3e50;">
                <padding>
                    <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                </padding>

                <!-- Action Buttons -->
                <Button text="Add Book" onAction="#handleAdd"
                        styleClass="action-button" prefWidth="120.0"/>
                <Button fx:id="updateButton" text="Update" onAction="#handleUpdate"
                        styleClass="action-button" prefWidth="120.0" disable="true"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#handleDelete"
                        styleClass="action-button-danger" prefWidth="120.0" disable="true"/>
                <Button text="Refresh" onAction="#handleRefresh"
                        styleClass="action-button" prefWidth="120.0"/>

                <Separator orientation="VERTICAL"/>

                <!-- Import Button -->
                <Button fx:id="importButton" text="Import CSV" onAction="#handleImport"
                        styleClass="action-button" prefWidth="130.0"/>

                <Separator orientation="VERTICAL"/>

                <!-- Stats Button -->
                <Button text="Statistics" onAction="#handleStats"
                        styleClass="action-button" prefWidth="130.0"/>

                <Region HBox.hgrow="ALWAYS"/>

                <!-- Search -->
                <TextField fx:id="searchField" promptText="ðŸ” Search by title or author or ISBN..."
                           prefWidth="300.0" onAction="#handleSearch"/>
                <Button text="Search" onAction="#handleSearch"
                        styleClass="action-button" prefWidth="80.0"/>
                <Button text="Clear" onAction="#handleClearSearch"
                        styleClass="action-button" prefWidth="80.0"/>
            </HBox>
        </VBox>
    </top>

    <!-- CENTER: Main Content Area -->
    <center>
        <SplitPane dividerPositions="0.65">

            <!-- LEFT: Table View -->
            <VBox spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>

                <Label text="Books Library" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID" prefWidth="60.0"/>
                        <TableColumn fx:id="titleColumn" text="Title" prefWidth="250.0"/>
                        <TableColumn fx:id="authorColumn" text="Author" prefWidth="180.0"/>
                        <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="150.0"/>
                        <TableColumn fx:id="publishedDateColumn" text="Published Date" prefWidth="130.0"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <!-- Pagination Controls -->
                <HBox alignment="CENTER" spacing="10.0">
                    <padding>
                        <Insets top="5.0"/>
                    </padding>
                    <Button fx:id="firstPageButton" text="â® First" onAction="#handleFirstPage"
                            prefWidth="80.0" disable="true"/>
                    <Button fx:id="prevPageButton" text="â—€ Prev" onAction="#handlePrevPage"
                            prefWidth="80.0" disable="true"/>
                    <Label fx:id="pageInfoLabel" text="Page 1 of 1">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Label>
                    <Button fx:id="nextPageButton" text="Next â–¶" onAction="#handleNextPage"
                            prefWidth="80.0" disable="true"/>
                    <Button fx:id="lastPageButton" text="Last â­" onAction="#handleLastPage"
                            prefWidth="80.0" disable="true"/>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Label text="Items per page:"/>
                    <ComboBox fx:id="pageSizeComboBox" prefWidth="80.0" onAction="#handlePageSizeChange"/>

                    <Label fx:id="recordCountLabel" text="0 records">
                        <font>
                            <Font size="12.0"/>
                        </font>
                    </Label>
                </HBox>
            </VBox>

            <!-- RIGHT: Form Panel -->
            <VBox spacing="15.0" style="-fx-background-color: #ecf0f1;">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <Label text="Book Details" styleClass="section-title">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

                <Separator/>

                <!-- Form Fields -->
                <VBox spacing="10.0">
                    <!-- ID (hidden/readonly) -->
                    <HBox visible="false" managed="false">
                        <Label text="ID:" prefWidth="120.0"/>
                        <TextField fx:id="idField" editable="false" prefWidth="250.0"/>
                    </HBox>

                    <!-- Title -->
                    <VBox spacing="5.0">
                        <Label text="Title *" styleClass="form-label">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="titleField" promptText="Enter book title"/>
                    </VBox>

                    <!-- Author -->
                    <VBox spacing="5.0">
                        <Label text="Author *" styleClass="form-label">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="authorField" promptText="Enter author name"/>
                    </VBox>

                    <!-- ISBN -->
                    <VBox spacing="5.0">
                        <Label text="ISBN *" styleClass="form-label">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="isbnField" promptText="Enter ISBN (e.g., 978-0132350884)"/>
                    </VBox>

                    <!-- Published Date -->
                    <VBox spacing="5.0">
                        <Label text="Published Date *" styleClass="form-label">
                            <font>
                                <Font name="System Bold" size="13.0"/>
                            </font>
                        </Label>
                        <DatePicker fx:id="publishedDatePicker" promptText="Select date" prefWidth="250.0"/>
                    </VBox>

                    <Label text="* Required fields" textFill="#7f8c8d">
                        <font>
                            <Font size="11.0" name="System Italic"/>
                        </font>
                    </Label>
                </VBox>

                <Region VBox.vgrow="ALWAYS"/>

                <!-- Form Action Buttons -->
                <VBox spacing="10.0">
                    <Separator/>
                    <Button fx:id="saveButton" text="Create Book" onAction="#handleSave"
                            styleClass="primary-button" maxWidth="Infinity" prefHeight="40.0">
                        <font>
                            <Font name="System Bold" size="14.0"/>
                        </font>
                    </Button>
                    <Button text="Clear Form" onAction="#handleClearForm"
                            styleClass="secondary-button" maxWidth="Infinity" prefHeight="35.0"/>
                </VBox>
            </VBox>
        </SplitPane>
    </center>

    <!-- BOTTOM: Status Bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="8.0" right="15.0" bottom="8.0" left="15.0"/>
            </padding>
            <Label fx:id="connectionStatusLabel" text="Checking..." textFill="#95a5a6">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
            </Label>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lastActionLabel" text="Last Action: None" textFill="#ecf0f1">
                <font>
                    <Font size="12.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Library Management System v1.0" textFill="#bdc3c7">
                <font>
                    <Font size="11.0"/>
                </font>
            </Label>
        </HBox>
    </bottom>
</BorderPane>